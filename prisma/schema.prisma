// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    @@map("users")

    id          Int @id @default(autoincrement())
    firstname    String?
    lastname    String?
    email       String @unique
    password    String
    created_at  DateTime @default(now())
    updated_at  DateTime @default(now())
}

model Bookmark {
    @@map("bookmarks")

    id          Int @id @default(autoincrement())
    title       String
    description String?
    link        String
    created_at  DateTime @default(now())
    updated_at  DateTime @default(now())
}
